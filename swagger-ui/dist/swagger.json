  "externalDocs": {
    "description": "More information on general usage and workflow (UPDATE THIS!)",
    "url": "https://google.de"
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/x-www-form-urlencoded"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/client_jwt/obtain": {
      "post": {
        "description": "Retrieves a JSON Web Token (JWT) that will authenticate you as an eligible B2B user on any other endpoint.\n",
        "tags": [
          "Authentication"
        ],
        "parameters": [
          {
            "name": "secret_key",
            "in": "formData",
            "description": "Your secret API key",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/jwt_successfully_created"
          },
          "400": {
            "$ref": "#/responses/ERROR_SECRET_KEY_DOES_NOT_EXIST"
          }
        }
      }
    }
  },
  "parameters": {
    "authorization_client_jwt": {
      "name": "Authorization",
      "in": "header",
      "type": "string",
      "required": true,
      "description": "Your JWT"
    },
    "authorization_user_jwt": {
      "name": "Authorization",
      "in": "header",
      "type": "string",
      "required": false,
      "description": "The user's JWT"
    }
  },
  "responses": {
    "jwt_successfully_created": {
      "description": "JWT successfully created",
      "schema": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "examples": {
        "application/json": {
          "token": "your.foo.token"
        }
      }
    },
    "ERROR_SECRET_KEY_DOES_NOT_EXIST": {
      "description": "The provided secret key is unknown.",
      "schema": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "examples": {
        "application/json": {
          "code": "ERROR_SECRET_KEY_DOES_NOT_EXIST",
          "message": "The provided secret key is unknown."
        }
      }
    },
    "ERROR_ACCOUNT_SUSPENDED": {
      "description": "Your account has been suspended. Please contact our support.",
      "schema": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "examples": {
        "application/json": {
          "code": "ERROR_ACCOUNT_SUSPENDED",
          "message": "Your account has been suspended. Please contact our support."
        }
      }
    }
  }
}